rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images de rapports (existant)
    match /reports/{reportId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Documents de vérification (NOUVEAU - accès restreint)
    match /verification/{userId}/selfie_{timestamp}.jpg {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.moderator == true
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /verification/{userId}/idcard_{timestamp}.jpg {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.moderator == true
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
